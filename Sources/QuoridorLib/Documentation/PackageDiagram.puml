@startuml Quoridor Package Diagram

skinparam packageStyle rectangle
skinparam package {
    BackgroundColor LightBlue
    BorderColor DarkBlue
}

package "QuoridorLib" {
    package "Interfaces" {
        [IGameManager]
        [ISaveManager]
        [ILoadManager]
    }

    package "Models" {
        [Game]
        [GameManager]
        [Round]
        [Board]
        [Player]
        [Pawn]
        [Wall]
        [Position]
        [BestOf]
    }
}

package "QuoridorConsole" {
    [Program]
}

' Relations entre les packages
QuoridorLib --> QuoridorConsole

' Relations entre les interfaces et les modèles
IGameManager <|.. GameManager
ISaveManager <|.. GameManager
ILoadManager <|.. GameManager

' Relations entre les modèles
GameManager --> Game
Game --> Round
Game --> Player
Game --> BestOf
Round --> Board
Round --> Player
Board --> Pawn
Board --> Wall
Wall --> Position
Pawn --> Position

' Dépendances des interfaces
IGameManager --> Game
ISaveManager --> Game
ILoadManager --> Game

@enduml 