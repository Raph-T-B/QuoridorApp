<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.HomePage"
             Title="Accueil"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="6" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Quoridor" 
               Grid.Row="0"
               FontSize="50"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Navigation -->
        <VerticalStackLayout Grid.Row="2" 
                            Grid.RowSpan="4"
                            Spacing="20"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
            <!-- Jouer -->
            <views:Bouton Texte="Jouer"
                         Clicked="Jouer_Tapped"
                         WidthRequest="300"
                         HeightRequest="60"/>
            <!-- Leaderboard -->
            <views:Bouton Texte="Leaderboard"
                         Clicked="Leaderboard_Tapped"
                         WidthRequest="300"
                         HeightRequest="60"/>
            <!-- Règles -->
            <views:Bouton Texte="Règles"
                         Clicked="Regles_Tapped"
                         WidthRequest="300"
                         HeightRequest="60"/>
            <!-- Quitter -->
            <views:Bouton Texte="Quitter"
                         Clicked="Quitter_Tapped"
                         WidthRequest="300"
                         HeightRequest="60"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>