<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.HomePage"
             Title="Accueil"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="6" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Quoridor" 
               Grid.Row="0"
               FontSize="50"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Bouton Nouvelle Partie -->
        <Button Grid.Row="2" 
                Style="{StaticResource NewGameButton}" 
                Clicked="NouvellePartie_Tapped"/>

        <!-- Bouton Charger -->
        <Button Grid.Row="3" 
                Style="{StaticResource LoadButton}" 
                Clicked="LeaderBoard_Tapped"/>

        <!-- Bouton Règles -->
        <Button Grid.Row="4" 
                Style="{StaticResource ActionButton}" 
                Text="Règles"
                Clicked="Regles_Tapped"/>

        <!-- Bouton Quitter -->
        <Button Grid.Row="5" 
                Style="{StaticResource QuitButton}" 
                Clicked="Quitter_Tapped"/>

    </Grid>
</ContentPage>