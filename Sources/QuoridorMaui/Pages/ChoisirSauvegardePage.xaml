<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.ChoisirSauvegardePage"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             xmlns:managers="clr-namespace:QuoridorLib.Managers;assembly=QuoridorLib"
             xmlns:models="clr-namespace:QuoridorLib.Models;assembly=QuoridorLib"
             x:DataType="managers:StubLoadManager">
    <Grid
    ColumnDefinitions="2*,3*,2*"
    RowDefinitions="22*,50*,11*,17*">
        <Image Source="boutonliste.png" 
               Grid.RowSpan="100" Grid.ColumnSpan="100" 
               Aspect="AspectFill"/>
        
        <Label Grid.Row="0" Grid.Column="1"  
               Text="Choisir votre partie :" FontSize="40" 
               HorizontalOptions="Center" VerticalOptions="Center"
               HorizontalTextAlignment="Center"/>
        
        <CollectionView Grid.Row="1" Grid.Column="1"
                    ItemsSource="{Binding Games}"
                    EmptyView="No Players to show">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Game">
                    <views:SauvegardeListItem 
                    TheGame="{Binding .}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <views:Bouton Grid.Column="1" Grid.Row="2" VerticalOptions="Center" Texte="Lancer"/>
        <Grid Grid.Column="1" Grid.Row="3" ColumnDefinitions="15*,70*,15*">
            
            <!-- Navigation Retour -->
            <Button Grid.Column="1"
                    Grid.Row="3"
                    Style="{StaticResource BackButton}"
                    Clicked="Retour_Tapped"/>
        </Grid>
    </Grid>
</ContentPage>


