<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.Page1VS1"
             Title="1 VS 1"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,2*,2*,2*,2*,2*,2*,2*"
          ColumnDefinitions="1*,4*,1*">
        <Image Source="homepagebackground.png" Grid.RowSpan="9" Grid.ColumnSpan="3" Aspect="AspectFill"/>
        
        <!-- Titre -->
        <Label Text="1 VS 1"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Nom du joueur 1 -->
        <Border Grid.Row="1"
               Grid.Column="1"
               Stroke="Transparent"
               BackgroundColor="Transparent"
               Margin="20,10">
            <Entry x:Name="EntryJoueur1"
                   Placeholder="Nom du joueur 1"
                   FontSize="25"
                   PlaceholderColor="Blue"
                   TextColor="BLack"
                   HorizontalTextAlignment="Center"/>
        </Border>

        <!-- Nom du joueur 2 -->
        <Border Grid.Row="2"
               Grid.Column="1"
               Stroke="Transparent"
               BackgroundColor="Transparent"
               Margin="20,10">
            <Entry x:Name="EntryJoueur2"
                   FontSize="25"
                   Placeholder="Nom du joueur 2"
                   PlaceholderColor="Red"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>
        </Border>

        <!-- Choix couleur joueur 1 -->
        <Border Grid.Row="3"
               Grid.Column="1"
               Stroke="Transparent"
               BackgroundColor="Transparent"
               StrokeShape="RoundRectangle 50"
               HeightRequest="100"
               WidthRequest="200"
               Margin="20,10">
            <HorizontalStackLayout x:Name="ColorButtonsJ1"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"/>
        </Border>

        <!-- Choix couleur joueur 2 -->
        <Border Grid.Row="4"
               Grid.Column="1"
               Stroke="Transparent"
               BackgroundColor="Transparent"
               StrokeShape="RoundRectangle 50"
               HeightRequest="100"
               WidthRequest="200"
               Margin="20,10">
            <HorizontalStackLayout x:Name="ColorButtonsJ2"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"/>
        </Border>

        <!-- Nombre de murs -->
        <Border Grid.Row="5"
               Grid.Column="1"
               Stroke="Transparent"
               BackgroundColor="Transparent"
               Margin="20,10">
            <Entry x:Name="EntryNbMurs"
                   Placeholder="Nombre de murs"
                   PlaceholderColor="MediumSpringGreen"
                   FontSize="25"
                   TextColor="Black"
                   Keyboard="Numeric"
                   HorizontalTextAlignment="Center"/>
        </Border>

        <!-- Best of -->
        <HorizontalStackLayout Grid.Row="6"
                              Grid.Column="1"
                              HorizontalOptions="Center"
                              Spacing="10">
            <views:Bouton Texte="BO1" Clicked="Bo1_Tapped"/>
            <views:Bouton Texte="BO3" Clicked="Bo3_Tapped"/>
            <views:Bouton Texte="BO5" Clicked="Bo5_Tapped"/>
        </HorizontalStackLayout>

        <!-- Navigation -->
        <VerticalStackLayout Grid.Row="7"
                             Grid.Column="1"
                             Spacing="10"
                             Margin="0,10">
            <views:Bouton Texte="Lancer la partie" Clicked="LancerPartie_Tapped"/>
            <views:Bouton Texte="Retour" Clicked="Retour_Tapped"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>