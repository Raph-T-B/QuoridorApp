<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.Page1VS1"
             Title="1 VS 1"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,6*,2*"
          ColumnDefinitions="2*,6*,2*">
        <Image Source="homepagebackground.png" 
               Grid.RowSpan="3" 
               Grid.ColumnSpan="3" 
               Aspect="AspectFill"/>
        
        <!-- Titre -->
        <Label Text="1 VS 1"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <VerticalStackLayout Grid.Row="1"
                            Grid.Column="1"
                            Spacing="30"
                            VerticalOptions="Start"
                            HorizontalOptions="Center">
            <!-- Nom du joueur 1 -->
            <Border Stroke="Transparent"
                    BackgroundColor="Transparent"
                    Margin="20,10">
                <Entry x:Name="EntryJoueur1"
                       Placeholder="Nom du joueur 1"
                       PlaceholderColor="Blue"
                       TextColor="Blue"
                       FontSize="25"
                       HorizontalTextAlignment="Center"/>
            </Border>

            <!-- Choix couleur joueur 1 -->
            <Border Stroke="Transparent"
                    BackgroundColor="Transparent"
                    StrokeShape="RoundRectangle 50"
                    HeightRequest="100"
                    WidthRequest="200"
                    Margin="20,10">
                <HorizontalStackLayout x:Name="ColorButtonsJ1"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center"/>
            </Border>

            <!-- Nom du joueur 2 -->
            <Border Stroke="Transparent"
                    BackgroundColor="Transparent"
                    Margin="20,10">
                <Entry x:Name="EntryJoueur2"
                       Placeholder="Nom du joueur 2"
                       PlaceholderColor="Red"
                       TextColor="Red"
                       FontSize="25"
                       HorizontalTextAlignment="Center"/>
            </Border>

            <!-- Choix couleur joueur 2 -->
            <Border Stroke="Transparent"
                    BackgroundColor="Transparent"
                    StrokeShape="RoundRectangle 50"
                    HeightRequest="100"
                    WidthRequest="200"
                    Margin="20,10">
                <HorizontalStackLayout x:Name="ColorButtonsJ2"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center"/>
            </Border>

            <!-- Nombre de murs -->
            <Border Stroke="Transparent"
                    BackgroundColor="Transparent"
                    Margin="20,10">
                <Entry x:Name="EntryNbMurs"
                       Placeholder="Nombre de murs"
                       PlaceholderColor="MediumSpringGreen"
                       FontSize="25"
                       TextColor="Black"
                       Keyboard="Numeric"
                       HorizontalTextAlignment="Center"/>
            </Border>

            <!-- Best of -->
            <HorizontalStackLayout HorizontalOptions="Center"
                                  Spacing="20">
                <views:Bouton Texte="BO1" Clicked="Bo1_Tapped" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                <views:Bouton Texte="BO3" Clicked="Bo3_Tapped" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                <views:Bouton Texte="BO5" Clicked="Bo5_Tapped" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            </HorizontalStackLayout>

            <!-- Navigation -->
            <VerticalStackLayout Spacing="20"
                                Margin="0,20">
                <views:Bouton Texte="Lancer la partie" 
                             Clicked="LancerPartie_Tapped"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="FillAndExpand"/>
                <views:Bouton Texte="Retour" 
                             Clicked="Retour_Tapped"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="FillAndExpand"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>