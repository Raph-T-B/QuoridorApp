                <views:ScoreBoardListItem PlayerName="Nate" PlayerPlace="8" PlayerVictory="4" />
                <views:ScoreBoardListItem PlayerName="Youpi" PlayerPlace="9" PlayerVictory="4" />
                <views:ScoreBoardListItem PlayerName="Pepe" PlayerPlace="10" PlayerVictory="2" />
                <views:ScoreBoardListItem PlayerName="Souris" PlayerPlace="11" PlayerVictory="1" />
                <views:ScoreBoardListItem PlayerName="Boulette" PlayerPlace="11" PlayerVictory="1" />
                <views:ScoreBoardListItem PlayerName="Papillon" PlayerPlace="12" PlayerVictory="1" />
                <views:ScoreBoardListItem PlayerName="Arbremort" PlayerPlace="11" PlayerVictory="1" />
                <views:ScoreBoardListItem PlayerName="Walace" PlayerPlace="12" PlayerVictory="1" />
                <views:ScoreBoardListItem PlayerName="Chaton" PlayerPlace="12" PlayerVictory="1" />
