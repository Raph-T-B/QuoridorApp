<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.LeaderBoardPage"
             Title="Leaderboard"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,6*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="3" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Leaderboard"
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Liste des scores -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10" Margin="20">
                <Label Text="Classement"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20"/>

                <CollectionView x:Name="ScoresList"
                              ItemsSource="{Binding Scores}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="White"
                                   BackgroundColor="Transparent"
                                   Padding="10"
                                   Margin="0,5">
                                <Grid ColumnDefinitions="*,*,*">
                                    <Label Text="{Binding Rank}"
                                           TextColor="White"
                                           FontSize="18"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding PlayerName}"
                                           TextColor="White"
                                           FontSize="18"
                                           Grid.Column="1"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding Score}"
                                           TextColor="White"
                                           FontSize="18"
                                           Grid.Column="2"
                                           HorizontalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bouton retour -->
        <views:Bouton Grid.Row="2"
                     Texte="Retour"
                     Clicked="Retour_Tapped"/>
    </Grid>
</ContentPage>