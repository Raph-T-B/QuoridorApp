<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             xmlns:managers="clr-namespace:QuoridorStub.Stub;assembly=QuoridorStub"
             xmlns:models="clr-namespace:QuoridorLib.Models;assembly=QuoridorLib"
             x:Class="QuoridorMaui.Pages.LeaderBoardPage"
             x:DataType="managers:StubLoadManager">
    
    <Grid
        ColumnDefinitions="26*,48*,26*"
        RowDefinitions="31*,56*,3*">
        <Image Source="fondecranleaderboard.png" Grid.RowSpan="100" Grid.ColumnSpan="100" Aspect="AspectFill"/>
        <Label Grid.Row="0" Grid.Column="1"  Text="LeaderBoard" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button/>
        <views:Bouton  Texte="Quitter" HeightRequest="60" WidthRequest="220"/>

                

        <ScrollView Grid.Row="1" Grid.Column="1">
            <CollectionView ItemsSource="{Binding Players}" Grid.Row="1" EmptyView="No Players to display" >
                <CollectionView.ItemTemplate >
                    <DataTemplate x:DataType="models:Player">
                        <Label Text="{Binding Name}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Bouton retour -->
        <views:Bouton Grid.Row="2"
                     Texte="Retour"
                     Clicked="Retour_Tapped"/>
    </Grid>
</ContentPage>