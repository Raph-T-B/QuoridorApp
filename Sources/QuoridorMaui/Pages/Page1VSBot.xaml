<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.Page1VSBot"
             Title="1 VS Bot"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,2*,2*,2*,2*,2*,2*,2*"
          ColumnDefinitions="2*,2*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="9" Grid.ColumnSpan="3" Aspect="AspectFill"/>
        
        <!-- Titre -->
        <Label Text="1 VS Bot"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Nom du joueur -->
        <Frame Grid.Row="1"
               Grid.Column="1"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20,10">
            <Entry x:Name="EntryJoueur1"
                   Placeholder="Nom du joueur"
                   PlaceholderColor="White"
                   TextColor="White"
                   HorizontalTextAlignment="Center"/>
        </Frame>

        <!-- Choix couleur -->
        <Frame Grid.Row="2"
               Grid.Column="1"
               BorderColor="White"
               BackgroundColor="Transparent"
               CornerRadius="50"
               HeightRequest="50"
               WidthRequest="200"
               Margin="20,10">
            <HorizontalStackLayout x:Name="ColorButtonsJ1"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"/>
        </Frame>

        <!-- Nombre de murs -->
        <Frame Grid.Row="3"
               Grid.Column="1"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20,10">
            <Entry x:Name="EntryNbMurs"
                   Placeholder="Nombre de murs"
                   PlaceholderColor="White"
                   TextColor="White"
                   Keyboard="Numeric"
                   HorizontalTextAlignment="Center"/>
        </Frame>

        <!-- Best of -->
        <HorizontalStackLayout Grid.Row="4"
                              Grid.Column="1"
                              HorizontalOptions="Center"
                              Spacing="10">
            <views:Bouton Texte="BO1" Clicked="Bo1_Tapped"/>
            <views:Bouton Texte="BO3" Clicked="Bo3_Tapped"/>
            <views:Bouton Texte="BO5" Clicked="Bo5_Tapped"/>
        </HorizontalStackLayout>

        <!-- Navigation -->
        <VerticalStackLayout Grid.Row="5"
                             Grid.Column="1"
                             Spacing="10"
                             Margin="0,10">
            <views:Bouton Texte="Lancer la partie" Clicked="LancerPartie_Tapped"/>
            <views:Bouton Texte="Retour" Clicked="Retour_Tapped"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>