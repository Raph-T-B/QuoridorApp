<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.EndPage"
             Title="Fin de partie"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,2*,2*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="5" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Fin de partie"
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Message de victoire -->
        <Label x:Name="VictoryMessage"
               Grid.Row="1"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <!-- Affichage des couleurs des joueurs -->
        <HorizontalStackLayout Grid.Row="2" Margin="0,40,0,0" HorizontalOptions="Center">
            <BoxView x:Name="Player1ColorBox" WidthRequest="30" HeightRequest="30" CornerRadius="15" />
            <Label x:Name="Player1NameLabel" FontSize="18" Margin="5,0" />
            <Label Text=":" FontSize="18" />
            <Label x:Name="Player1ScoreLabel" FontSize="18" />
            <Label Text="  |  " FontSize="18" />
            <BoxView x:Name="Player2ColorBox" WidthRequest="30" HeightRequest="30" CornerRadius="15" />
            <Label x:Name="Player2NameLabel" FontSize="18" Margin="5,0" />
            <Label Text=":" FontSize="18" />
            <Label x:Name="Player2ScoreLabel" FontSize="18" />
        </HorizontalStackLayout>

        <!-- Boutons -->
        <VerticalStackLayout Grid.Row="3" Spacing="10" HorizontalOptions="Center">
            <views:Bouton Texte="Rejouer"
                         Clicked="Rejouer_Tapped"
                         WidthRequest="200"/>
            <views:Bouton Texte="Menu"
                         Clicked="Menu_Tapped"
                         WidthRequest="200"/>
        </VerticalStackLayout>

        <views:Bouton Grid.Row="4"
                     Texte="Quitter"
                     Clicked="Quitter_Tapped"
                     WidthRequest="200"/>
    </Grid>
</ContentPage>