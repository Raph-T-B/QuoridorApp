<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.EndPage"
             Title="Fin de partie"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,6*,2*"
          ColumnDefinitions="2*,6*,2*">
        <Image Source="homepagebackground.png" 
               Grid.RowSpan="3" 
               Grid.ColumnSpan="3" 
               Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Fin de partie"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <VerticalStackLayout Grid.Row="1"
                            Grid.Column="1"
                            Spacing="30"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
            <!-- Message de victoire -->
            <Label x:Name="VictoryMessage"
                   FontSize="32"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- Affichage des couleurs des joueurs -->
            <HorizontalStackLayout Spacing="20" 
                                  HorizontalOptions="Center">
                <BoxView x:Name="Player1ColorBox" 
                        WidthRequest="30" 
                        HeightRequest="30" 
                        CornerRadius="15" />
                <Label x:Name="Player1NameLabel" 
                       FontSize="24" 
                       Margin="5,0" />
                <Label Text=":" 
                       FontSize="24" />
                <Label x:Name="Player1ScoreLabel" 
                       FontSize="24" />
                <Label Text="  |  " 
                       FontSize="24" />
                <BoxView x:Name="Player2ColorBox" 
                        WidthRequest="30" 
                        HeightRequest="30" 
                        CornerRadius="15" />
                <Label x:Name="Player2NameLabel" 
                       FontSize="24" 
                       Margin="5,0" />
                <Label Text=":" 
                       FontSize="24" />
                <Label x:Name="Player2ScoreLabel" 
                       FontSize="24" />
            </HorizontalStackLayout>

            <!-- Boutons -->
            <VerticalStackLayout Spacing="20"
                                Margin="0,20">
                <views:Bouton Texte="Rejouer"
                             Clicked="Rejouer_Tapped"
                             WidthRequest="350"/>
                <views:Bouton Texte="Menu"
                             Clicked="Menu_Tapped"
                             WidthRequest="350"/>
                <views:Bouton Texte="Quitter"
                             Clicked="Quitter_Tapped"
                             WidthRequest="350"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>