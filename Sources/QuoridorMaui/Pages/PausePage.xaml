<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.PausePage"
             Title="Pause"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,6*,2*"
          ColumnDefinitions="2*,6*,2*">
        <Image Source="homepagebackground.png" 
               Grid.RowSpan="3" 
               Grid.ColumnSpan="3" 
               Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Pause"
               Grid.Row="0"
               Grid.Column="1"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <VerticalStackLayout Grid.Row="1"
                            Grid.Column="1"
                            Spacing="30"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
            <views:Bouton Texte="Reprendre"
                         Clicked="Reprendre_Tapped"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand"/>
            <views:Bouton Texte="Sauvegarder"
                         Clicked="Sauvegarder_Tapped"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand"/>
            <views:Bouton Texte="RÃ¨gles"
                         Clicked="Regles_Tapped"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand"/>
            <views:Bouton Texte="Quitter"
                         Clicked="Quitter_Tapped"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>