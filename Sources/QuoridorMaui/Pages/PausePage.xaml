<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.PausePage"
             Title="Pause"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="6" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Pause" 
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Bouton Reprendre -->
        <Button Grid.Row="2" 
                Style="{StaticResource ActionButton}" 
                Text="Reprendre"
                Clicked="Reprendre_Tapped"/>

        <!-- Bouton Sauvegarder -->
        <Button Grid.Row="3" 
                Style="{StaticResource SaveButton}" 
                Clicked="Sauvegarder_Tapped"/>

        <!-- Bouton Menu -->
        <Button Grid.Row="4" 
                Style="{StaticResource MenuButton}" 
                Clicked="Menu_Tapped"/>

        <!-- Bouton Quitter -->
        <Button Grid.Row="5" 
                Style="{StaticResource QuitButton}" 
                Clicked="Quitter_Tapped"/>

    </Grid>
</ContentPage>