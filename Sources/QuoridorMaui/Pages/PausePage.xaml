<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.PausePage"
             Title="Pause"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,2*,2*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="5" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Pause"
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Reprendre -->
        <views:Bouton Grid.Row="1"
                     Texte="Reprendre"
                     Clicked="Reprendre_Tapped"/>

        <!-- Sauvegarder -->
        <views:Bouton Grid.Row="2"
                     Texte="Sauvegarder"
                     Clicked="Sauvegarder_Tapped"/>

        <!-- Règles -->
        <views:Bouton Grid.Row="3"
                     Texte="Règles"
                     Clicked="Regles_Tapped"/>

        <!-- Quitter -->
        <views:Bouton Grid.Row="4"
                     Texte="Quitter"
                     Clicked="Quitter_Tapped"/>
    </Grid>
</ContentPage>