<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.Regles"
             BackgroundColor="White">

    <Grid RowDefinitions="10*,80*,10*">
        <!-- Image de fond -->
        <Image Source="rulesfont.jpg"
               Aspect="AspectFill"
               Grid.RowSpan="3"
               Opacity="0.9"/>

        <!-- Titre -->
        <Label Text="Règles"
               FontSize="42"
               Margin="20"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               VerticalOptions="Center"
               TextColor="Black"
               TextDecorations="Underline"
               Grid.Row="0"/>

        <!-- Grid des règles -->
        <Grid Grid.Row="1"
              ColumnDefinitions="25*,25*,25*,25*"
              ColumnSpacing="10"
              Margin="20">
            
            <!-- Règle 1 -->
            <StackLayout Grid.Column="0"
                        Spacing="5">
                <Frame BorderColor="Black"
                       Padding="0">
                    <Image Source="regles1.png"
                           Aspect="AspectFill"
                           HeightRequest="200"/>
                </Frame>
                <Label Text="Être le premier à atteindre la ligne opposée du plateau avec son pion"
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"
                       Margin="0,5"/>
            </StackLayout>

            <!-- Règle 2 -->
            <StackLayout Grid.Column="1"
                        Spacing="5">
                <Frame BorderColor="Black"
                       Padding="0">
                    <Image Source="reglesdeplacement.jpg"
                           Aspect="AspectFill"
                           HeightRequest="200"/>
                </Frame>
                <Label Text="Déplacer son pion d'une case (avant, arrière, gauche ou droite)"
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"
                       Margin="0,5"/>
            </StackLayout>

            <!-- Règle 3 -->
            <StackLayout Grid.Column="2"
                        Spacing="5">
                <Frame BorderColor="Black"
                       Padding="0">
                    <Image Source="designer.png"
                           Aspect="AspectFill"
                           HeightRequest="200"/>
                </Frame>
                <Label Text="Placer un mur pour gêner l'adversaire, mais il est interdit de l'enfermer complètement."
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"
                       Margin="0,5"/>
            </StackLayout>

            <!-- Règle 4 -->
            <StackLayout Grid.Column="3"
                        Spacing="5">
                <Frame BorderColor="Black"
                       Padding="0">
                    <Image Source="reglesaut.png"
                           Aspect="AspectFill"
                           HeightRequest="200"/>
                </Frame>
                <Label Text="Si un pion est adjacent à un autre pion, il peut sauter par-dessus si l'espace derrière est libre."
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"
                       Margin="0,5"/>
            </StackLayout>
        </Grid>

        <!-- Bouton Retour -->
        <views:Bouton Texte="Retour"
                FontSize="44"
                WidthRequest="350"
                HeightRequest="90"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="2"
                Clicked="Retour_Tapped"/>
    </Grid>
</ContentPage>