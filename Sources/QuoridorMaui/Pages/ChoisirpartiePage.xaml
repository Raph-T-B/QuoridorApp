<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.ChoisirpartiePage"
             Title="Choisir une partie"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="5" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Choisir une partie" 
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Bouton Charger sauvegarde -->
        <Button Grid.Row="2" 
        Style="{StaticResource ActionButton}" 
        Text="1 vs 1"
        Clicked="choisirsauvegardepage_Tapped"/>
        
        <!-- Bouton 1 vs 1 -->
        <Button Grid.Row="2" 
                Style="{StaticResource ActionButton}" 
                Text="1 vs 1"
                Clicked="UnVSUn_Tapped"/>

        <!-- Bouton 1 vs Bot -->
        <Button Grid.Row="3" 
                Style="{StaticResource ActionButton}" 
                Text="1 vs Bot"
                Clicked="UnVSBot_Tapped"/>

        <!-- Bouton Retour -->
        <Button Grid.Row="4" 
                Style="{StaticResource BackButton}" 
                Clicked="Retour_Tapped"/>

    </Grid>
</ContentPage>