<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.ChoisirpartiePage"
             Title="Choisir une partie"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,6*,2*"
          ColumnDefinitions="2*,6*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" 
               Grid.RowSpan="3" 
               Grid.ColumnSpan="3" 
               Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Choisir une partie" 
               Grid.Row="0"
               Grid.Column="1"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="#FFD700"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <VerticalStackLayout Grid.Row="1"
                            Grid.Column="1"
                            Spacing="50"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">
            <views:Bouton Texte="Reprendre partie"
                         Clicked="ReprendrePartie_Tapped"
                         HeightRequest="90"
                         WidthRequest="350"/>
            <views:Bouton Texte="Player vs Player"
                         Clicked="Page1VS1_Tapped"
                         HeightRequest="90"
                         WidthRequest="350"/>
            <views:Bouton Texte="Player vs Bot"
                         Clicked="UnVSBot_Tapped"
                         HeightRequest="90"
                         WidthRequest="350"/>
            <views:Bouton Texte="Retour"
                         Clicked="Retour_Tapped"
                         HeightRequest="90"
                         WidthRequest="350"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>