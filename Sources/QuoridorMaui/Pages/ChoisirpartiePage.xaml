<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.ChoisirpartiePage"
             Title="Choisir une partie"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="5" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Choisir une partie" 
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Reprendre partie -->
        <views:Bouton Grid.Row="1"
                Texte="Reprendre partie"
                Clicked="ReprendrePartie_Tapped"/>

        <!-- Player vs Player -->
        <views:Bouton Grid.Row="2"
                Texte="Player vs Player"
                Clicked="Page1VS1_Tapped"/>

        <!-- Player vs Bot -->
        <views:Bouton Grid.Row="3"
                Texte="Player vs Bot"
                Clicked="UnVSBot_Tapped"/>

        <!-- Navigation Retour -->
        <views:Bouton Grid.Row="4"
                Texte="Retour"
                Clicked="Retour_Tapped"/>

    </Grid>
</ContentPage>