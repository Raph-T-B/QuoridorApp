<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.SettingPage"
             Title="Paramètres"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,1.5*,1.5*,1.5*,2*">
        <!-- Background -->
        <Image Source="homepagebackground.png" Grid.RowSpan="6" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Paramètres" 
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Volume -->
        <StackLayout Grid.Row="2" Spacing="10">
            <Label Text="Volume" 
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            <Slider Maximum="100" 
                    Minimum="0" 
                    Value="50"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>
        </StackLayout>

        <!-- Difficulté -->
        <StackLayout Grid.Row="3" Spacing="10">
            <Label Text="Difficulté" 
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            <Picker Title="Sélectionner la difficulté"
                    HorizontalOptions="Center"
                    WidthRequest="200">
                <Picker.Items>
                    <x:String>Facile</x:String>
                    <x:String>Moyen</x:String>
                    <x:String>Difficile</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>

        <!-- Bouton Sauvegarder -->
        <Button Grid.Row="4" 
                Style="{StaticResource SaveButton}" 
                Clicked="Sauvegarder_Tapped"/>

        <!-- Bouton Retour -->
        <Button Grid.Row="5" 
                Style="{StaticResource BackButton}" 
                Clicked="Retour_Tapped"/>

    </Grid>
</ContentPage>