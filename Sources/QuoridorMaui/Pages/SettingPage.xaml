<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:QuoridorMaui.Views"
             x:Class="QuoridorMaui.Pages.SettingPage"
             Title="Paramètres"
             BackgroundColor="Black">

    <Grid RowDefinitions="2*,2*,2*,2*,2*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="6" Aspect="AspectFill"/>

        <!-- Titre -->
        <Label Text="Paramètres"
               Grid.Row="0"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="End"/>

        <!-- Thème -->
        <Frame Grid.Row="1"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Thème"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <views:Bouton x:Name="BtnSombre"
                                Texte="Sombre"
                                Clicked="OnThemeButtonClicked"
                                WidthRequest="100"/>
                    <views:Bouton x:Name="BtnClair"
                                Texte="Clair"
                                Clicked="OnThemeButtonClicked"
                                WidthRequest="100"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Volume -->
        <Frame Grid.Row="2"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Volume"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Slider x:Name="VolumeSlider"
                        Maximum="1"
                        Minimum="0"
                        Value="0.5"
                        ValueChanged="VolumeSlider_ValueChanged"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Musique -->
        <Frame Grid.Row="3"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Musique"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Switch x:Name="MusicSwitch"
                        IsToggled="True"
                        Toggled="MusicSwitch_Toggled"
                        HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Effets sonores -->
        <Frame Grid.Row="4"
               BorderColor="White"
               BackgroundColor="Transparent"
               Margin="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Effets sonores"
                       FontSize="20"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Switch x:Name="SoundEffectsSwitch"
                        IsToggled="True"
                        Toggled="SoundEffectsSwitch_Toggled"
                        HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Retour -->
        <views:Bouton Grid.Row="5"
                     Texte="Retour"
                     Clicked="Retour_Tapped"/>
    </Grid>
</ContentPage>


        
