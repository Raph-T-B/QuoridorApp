<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Style pour le bouton Retour -->
    <Style x:Key="BackButton" TargetType="Button">
        <Setter Property="Text" Value="Retour"/>
        <Setter Property="Style" Value="{StaticResource NavigationButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <!-- Style pour le bouton Menu -->
    <Style x:Key="MenuButton" TargetType="Button">
        <Setter Property="Text" Value="Menu"/>
        <Setter Property="Style" Value="{StaticResource NavigationButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Style pour le bouton Continuer -->
    <Style x:Key="ContinueButton" TargetType="Button">
        <Setter Property="Text" Value="Continuer"/>
        <Setter Property="Style" Value="{StaticResource PrimaryButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Style pour le bouton Quitter -->
    <Style x:Key="QuitButton" TargetType="Button">
        <Setter Property="Text" Value="Quitter"/>
        <Setter Property="Style" Value="{StaticResource DangerButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="150"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="End"/>
    </Style>

    <!-- Style pour le bouton Nouvelle Partie -->
    <Style x:Key="NewGameButton" TargetType="Button">
        <Setter Property="Text" Value="Nouvelle Partie"/>
        <Setter Property="Style" Value="{StaticResource SuccessButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Style pour le bouton Sauvegarder -->
    <Style x:Key="SaveButton" TargetType="Button">
        <Setter Property="Text" Value="Sauvegarder"/>
        <Setter Property="Style" Value="{StaticResource ActionButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="180"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <!-- Style pour le bouton Charger -->
    <Style x:Key="LoadButton" TargetType="Button">
        <Setter Property="Text" Value="Charger"/>
        <Setter Property="Style" Value="{StaticResource ActionButton}"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="180"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

</ResourceDictionary> 