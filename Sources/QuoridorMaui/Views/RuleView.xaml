<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Views.RuleView">

    <Border Style="{StaticResource Frame}">
        <VerticalStackLayout Spacing="5">
            <Image x:Name="ruleImage"
                   Style="{StaticResource RuleImage}"/>
            
            <Label x:Name="ruleTitle"
                   Style="{StaticResource RuleTitle}"/>
            
            <Label x:Name="ruleDescription"
                   Style="{StaticResource RuleDescription}"/>
        </VerticalStackLayout>
    </Border>
</ContentView> 