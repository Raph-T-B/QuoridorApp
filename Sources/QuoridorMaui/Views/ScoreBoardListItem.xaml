<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Models="clr-namespace:QuoridorLib.Models;assembly=QuoridorLib"
             x:Class="QuoridorMaui.Views.ScoreBoardListItem"
             x:Name="root"
             BindingContext="{x:Reference root }">

    <ContentView.Resources>
        <Style  TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="TextColor" Value="{StaticResource colorListtext}"/> 
        </Style>
    </ContentView.Resources>
    <Grid>
        <Image Source="boutonliste.png"></Image>
        <Grid ColumnDefinitions="4*,auto,*" Padding="40 ,0">
            <Label Text="{Binding PlayerName,Source={x:Reference root}}" HorizontalOptions="Start" Padding="0 ,0 ,0 ,0"/>
            <Label Text="Victoires :" Grid.Column="1"/>
            <Label Text="{Binding PlayerVictories,Source={x:Reference root}}" Grid.Column="2" />
        </Grid>
    </Grid>
</ContentView>
