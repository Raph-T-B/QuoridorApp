<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Views.SauvegardeListItem"
             x:Name="root"
             BindingContext="{x:Reference root }">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="TextColor" Value="{StaticResource colorListtext}"/>
        </Style>
    </ContentView.Resources>
    <Grid>
        <Image Source="boutonliste.png"></Image>
        <HorizontalStackLayout  Margin="12" HorizontalOptions="Center"  >
            <Label Text="{Binding ResumePartie,Source={x:Reference root}}" Style="{StaticResource centeredText}"/>
        </HorizontalStackLayout>
    </Grid>
</ContentView>
