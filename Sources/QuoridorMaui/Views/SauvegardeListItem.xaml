<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Views.SauvegardeListItem"
             x:Name="this"
             BindingContext="{x:Reference this }">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="TextColor" Value="{StaticResource colorListtext}"/>
        </Style>
    </ContentView.Resources>
    <Grid>
        <Image Source="boutonliste.png"></Image>
        <HorizontalStackLayout  Margin="12" HorizontalOptions="Center"  >
            <Label Text="(BO" Style="{StaticResource centeredText}"/>
            <Label Text="{Binding PartieBOGlobal}" Style="{StaticResource centeredText}" />
            <Label Text=") :" />
            <Label Text="{Binding PartiePlayer1}"  Style="{StaticResource centeredText}"/>
            <Label Text=" (" />
            <Label Text="{Binding PartieBO1}"  Style="{StaticResource centeredText}"/>
            <Label Text=") VS :"  />
            <Label Text="{Binding PartiePlayer2}"  Style="{StaticResource centeredText}"/>
            <Label Text=" (" />
            <Label Text="{Binding PartieBO2}" Style="{StaticResource centeredText}" />
            <Label Text=")"/>
        </HorizontalStackLayout>
    </Grid>
</ContentView>
