<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Views.SauvegardeListItem">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" 
                    Value="30"/>

            <Setter Property="TextColor" 
                    Value="{StaticResource colorListtext}"/>
        </Style>
    </ContentView.Resources>
    <Grid ColumnDefinitions="10*,10*,33*,10*,33*">
        <Image Source="boutonliste.png" Grid.RowSpan="100" Grid.ColumnSpan="100" Aspect="AspectFill"/>

        
        <Label Text="{Binding BoGlobal}"
               Style="{StaticResource centeredText}"/>
        
        <Label Text="{Binding BoP1}" 
               Style="{StaticResource centeredText}"
               Grid.Column="1"/>

        <Label Text="{Binding Player1}"
               Style="{StaticResource centeredText}"
               Grid.Column="2"/>

        <Label Text="{Binding BoP2}" 
               Style="{StaticResource centeredText}"
               Grid.Column="3"/>

        <Label Text="{Binding Player2}"
               Style="{StaticResource centeredText}"
               Grid.Column="4"/>
    </Grid>
</ContentView>
