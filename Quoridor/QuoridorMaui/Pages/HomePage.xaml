<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.HomePage"
             >
    <Grid 
          ColumnDefinitions="2*,2*,2*"
          RowDefinitions="3*,2*,2*,2*,*,2*">
        <Image Source="homepagebackground.png" Grid.RowSpan="100" Grid.ColumnSpan="100" Aspect="AspectFill"/>

            <ImageButton Grid.Column="1" Margin="0,2" Grid.Row="1" VerticalOptions="Center" BackgroundColor="Transparent" BorderColor="Transparent" Source="bouton.png" Clicked="test_bouton"/>
            <Label Grid.Column="1" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Text="Jouer" TextColor="White">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="test_bouton"/>
                </Label.GestureRecognizers>
            </Label>
        <ImageButton Grid.Column="1" Grid.Row="2" Margin="0,2" VerticalOptions="Center" BackgroundColor="Transparent" BorderColor="Transparent" Source="bouton.png" Clicked="test_bouton"/>
        <Label Grid.Column="1" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Center" Text="LeaderBoard" TextColor="White">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton Grid.Column="1" Grid.Row="3" Margin="0,2" VerticalOptions="Center" BackgroundColor="Transparent" BorderColor="Transparent" Source="bouton.png" Clicked="test_bouton"/>
        <Label Grid.Column="1" Grid.Row="3" VerticalOptions="Center" HorizontalOptions="Center" Text="Regles" TextColor="White">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton Grid.Column="1" Grid.Row="5" VerticalOptions="Center" BackgroundColor="Transparent" BorderColor="Transparent" Source="bouton.png" Clicked="test_bouton"/>
        <Label Grid.Column="1" Grid.Row="5" VerticalOptions="Center" HorizontalOptions="Center" Text="Quitter" TextColor="White">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton Grid.Column="2" Grid.Row="0"  VerticalOptions="End" HorizontalOptions="End" BackgroundColor="Transparent"  BorderColor="Transparent" Source="parametre.png" Clicked="test_bouton"/>
        
    </Grid>
</ContentPage>