<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.LeaderBoardPage"
             xmlns:views="clr-namespace:QuoridorMaui.Views">
    <Grid
        ColumnDefinitions="10*,80*,10*"
        RowDefinitions="10*,10*,70*,10*">
        <Label Grid.Row="1" Grid.Column="1"  Text="LeaderBoard" FontSize="40" HorizontalOptions="Center" VerticalOptions="Center"/>
        <ScrollView Grid.Row="2" Grid.Column="1">
            <VerticalStackLayout  HorizontalOptions="Center" >
                <views:ScoreBoardListItem BackgroundColor="Aqua" PlayerName="Bob" PlayerPlace="1" PlayerVictory="10" />
                <views:ScoreBoardListItem BackgroundColor="DarkSalmon" PlayerName="Paul" PlayerPlace="2" PlayerVictory="8" />
                <views:ScoreBoardListItem BackgroundColor="ForestGreen" PlayerName="Nathan" PlayerPlace="3" PlayerVictory="6" />
                <views:ScoreBoardListItem BackgroundColor="DarkRed" PlayerName="Mathys" PlayerPlace="4" PlayerVictory="2" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>