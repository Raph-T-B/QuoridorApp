<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.ChoisirpartiePage"
             Title="ChoisirpartiePage">
    <Grid 
     ColumnDefinitions="2*,2*,2*"
       RowDefinitions="3*,2*,2*,2*,*,2*">
        <Image Source="boutonliste.png" Grid.RowSpan="100" Grid.ColumnSpan="100" Aspect="AspectFill"/>

        <ImageButton Style="{StaticResource BoutonGlobal}"  Grid.Column="1" Grid.Row="1" VerticalOptions="Center" Clicked="test_bouton"/>
        <Label Style="{StaticResource textButton}" Grid.Column="1" Grid.Row="1" Text="Reprendre Partie">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton Style="{StaticResource BoutonGlobal}" Grid.Column="1" Grid.Row="2" VerticalOptions="Center" Clicked="test_bouton" />
        <Label Style="{StaticResource textButton}" Grid.Column="1" Grid.Row="2" Text="Player VS Player" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton Style="{StaticResource BoutonGlobal}" Grid.Column="1" Grid.Row="3" VerticalOptions="Center" Clicked="test_bouton" />
        <Label Style="{StaticResource textButton}" Grid.Column="1" Grid.Row="3" Text="Player VS Bot" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>
        <ImageButton  Style="{StaticResource BoutonGlobal}" Grid.Column="1" Grid.Row="5" VerticalOptions="Center" Clicked="test_bouton" />
        <Label Style="{StaticResource textButton}" Grid.Column="1" Grid.Row="5" Text="Retour">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="test_bouton"/>
            </Label.GestureRecognizers>
        </Label>

    </Grid>
</ContentPage>