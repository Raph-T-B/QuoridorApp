<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Pages.Page1VSBot"
             Title="Page1VSBot"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <Grid RowDefinitions="10*,80*,10*"
          ColumnDefinitions="10*,80*,10*">
        
        <Grid Grid.Row="1" 
              Grid.Column="1"
              RowDefinitions="20*,15*,15*,15*,15*,20*">

            <!-- Titre -->
            <Label Text="1 VS Bot"
                   Grid.Row="0"
                   Style="{StaticResource Headline}"
                   TextDecorations="Underline"
                   FontAttributes="Bold"/>

            <!-- Nom du joueur -->
            <Frame Grid.Row="1"
                   Margin="50,10"
                   Padding="10">
                <Entry Placeholder="Nom du joueur"
                       HorizontalTextAlignment="Center"/>
            </Frame>

            <!-- Choix couleur -->
            <Frame Grid.Row="2"
                   Margin="50,10"
                   CornerRadius="50"
                   HeightRequest="50"
                   WidthRequest="50"
                   HorizontalOptions="Center">
                <Button Text="Choix couleur"
                        CornerRadius="50"/>
            </Frame>

            <!-- Choix difficulté -->
            <Frame Grid.Row="3"
                   Margin="50,10"
                   Padding="10">
                <Picker Title="Choix difficulté"
                        HorizontalTextAlignment="Center">
                    <Picker.Items>
                        <x:String>Facile</x:String>
                        <x:String>Moyen</x:String>
                        <x:String>Difficile</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Boutons -->
            <VerticalStackLayout Grid.Row="4"
                                Spacing="10"
                                Margin="50,10">
                <Button Text="Lancer la partie"
                        HorizontalOptions="Center"/>
                
                <Button Text="Retour"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalOptions="Center"
                        BackgroundColor="White"
                        TextColor="Black"
                        BorderColor="Black"
                        BorderWidth="2"/>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>