<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuoridorMaui.Views.ScoreBoardListItem"
             x:Name="this"
             BindingContext="{x:Reference this }">
    <Grid>
        <Image Source="boutonliste.png"></Image>
        <HorizontalStackLayout  Margin="12" HorizontalOptions="Center" >
            <Label Text="{Binding PlayerPlace}" FontSize="50" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text=") : Nbr victoire : " Style="{StaticResource textLeaderBoardList}" />
            <Label Text="{Binding PlayerVictory}" Style="{StaticResource textLeaderBoardList}" />
            <Label Text="->    " Style="{StaticResource textLeaderBoardList}" />
            <Label Text="{Binding PlayerName}" Style="{StaticResource textLeaderBoardList}" />
        </HorizontalStackLayout>
    </Grid>
</ContentView>
